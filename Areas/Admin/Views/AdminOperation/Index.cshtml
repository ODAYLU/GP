@section Scripts{
    @(await Html.PartialAsync("_ValidationScriptsPartial"));
    <script type="text/javascript">
        
        $(document).ready(function () {
            $("#Owners").DataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "responsive": true,
                "lengthMenu": [10, 20, 30, 40, 50],
                "language": {
                    "search": "ابحث",
                    "lengthMenu": "عرض _MENU_ صفوف"
                },
                "ajax": {
                    "url": '/api/Api/GetOwners',
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs": [{
                    "targets": 0,
                    "visible": false,
                    "searchable": false
                }],
                "columns": [
                    { "data": "id", "name": "Id", "autowidth": true },
                    { "data": "firstName", "name": "FirstName", "autowidth": true },
                    { "data": "lastName", "name": "LastName", "autowidth": true },
                    { "data": "userName", "name": "UserName", "autowidth": true },
                    {
                        "render": function (data, type, row) {
                            if (row.is_active) {
                                return '<span>نشط</span>'
                            }
                            else {
                                return '<span>غير نشط</span>'
                            }

                        },
                        "orderable": false
                    },

                    { "data": "memory", "name": "memory", "autowidth": true },
                    {
                        "render": function (data, type, row) { return '<img src="' + row.imagePath + '" class=" w-25 h-25" asp-append-version="true" />' },
                        "orderable": false
                    },
                    {
                        "render": function (data, type, row) { return '<a href="#" class="btn btn-outline-danger" onclick=DeleteCategory("' + row.id + '"); > تفاصيل </a>' },
                        "orderable": false
                    },
                    {
                        "render": function (data, type, row) {
                            if (row.is_active) {
                                return '<a href="#" id="btnStates" class="btn btn-outline-danger" onclick=BlockUser("' + row.id + '"); > تقييد </a>'
                            }
                            else {
                                return '<a href="#" id="btnStates" class="btn btn-outline-danger" onclick=UnBlockUser("' + row.id + '"); > تفعيل </a>'
                            }

                        },
                        "orderable": false
                    },
                    {
                        "render": function (data, type, row) { return '<a href="#" class="btn btn-outline-danger" onclick=AddToMemory("' + row.id + '"); > إضافة للحافظة  </a>' },
                        "orderable": false
                    },
                    {
                        "render": function (data, type, row) { return '<a href="#" class="btn btn-outline-danger" onclick=DeleteCategory("' + row.id + '"); > حذف </a>' },
                        "orderable": false
                    },
                ]
            });
        });

        function AddToMemory(Id) {
            $("#inputId").val(Id);
            $("#Add").click();
            $("#btnAdd").hide();
            $("#btnAddMemory").show();
        }

        $("#btnAddMemory").click(function () {
            $.ajax({
                method: 'Get',
                url: `/Admin/UserOperation/AddToMemory`,
                data: { id: $("#inputId").val(), count: $("#numDays").val() },
                success: function () {
                    Swal.fire(
                        'تمت بنجاح',
                        'تم الاضافة للحافظة بنجاح',
                        'success'
                    );

                    $("#btnClose").click();
                    var Table = $("#Owners").DataTable();
                    Table.draw();
                }
            });
        });

        function DeleteCategory(Id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        method: 'Get',
                        url: `/Admin/CategoryOperation/Delete/${Id}`,
                        data: JSON.stringify({ id: Id }),
                        success: function () {
                            Swal.fire(
                                'Deleted!',
                                'Your file has been deleted.',
                                'success'
                            )
                            var Table = $("#Owners").DataTable();
                            Table.draw();
                        }
                    });

                }
            })

        }

        $("#formadd").on("submit", function (e) {
            e.preventDefault();
        })
        function UnBlockUser(Id) {
            $.ajax({
                method: 'Get',
                url: `/Admin/UserOperation/UnBlockUser`,
                data: { id: Id },
                success: function () {
                    Swal.fire(
                        'التفعيل!',
                        'تم فك القيد بنجاح.',
                        'success'
                    );
                    var Table = $("#Owners").DataTable();
                    Table.draw(false);
                }
            });
        }
        function BlockUser(Id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "أنت سوف تقوم تقييد المستخدم",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        method: 'Get',
                        url: `/Admin/UserOperation/BlockUser`,
                        data: { id: Id },
                        success: function () {
                            Swal.fire(
                                'Blocked!',
                                'Your file has been Blocked.',
                                'success'
                            );

                            $("#btnClose").click();
                            var Table = $("#Owners").DataTable();
                            Table.draw();
                        }
                    });

                }
            })

        }


    </script>
}

