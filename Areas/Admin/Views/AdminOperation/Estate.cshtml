        function EditItem(data) {
            $(".span").text("");
            $("#btnAdd").hide();
            $("#btnEdit").show();
            $("#id").val(data.id);
            $("#fname").val(data.category);
            $("#image").attr("src", data.imagePath);
        }
        function DeleteCategory(Id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        method: 'Get',
                        url: `/Admin/CategoryOperation/Delete/${Id}`,
                        data: JSON.stringify({ id: Id }),
                        success: function () {
                            Swal.fire(
                                'Deleted!',
                                'Your file has been deleted.',
                                'success'
                            )
                            var Table = $("#Estates").DataTable();
                            Table.draw();
                        }
                    });
                    
                }
            })
           
        }
        $("#Add").on("click", function () {
            $("#btnAdd").show();
            $("#btnEdit").hide();
            $("input").val("");
            $(".span").text("");
            $('#image')[0].src = "";
        });
        function img_pathUrl(input) {
            $('#image')[0].src = (window.URL ? URL : webkitURL).createObjectURL(input.files[0]);
        }
        $("#btnAdd").on("click", function () {
            if ($("#lname").val() != "" && $("#fname").val() != "")
            {
                var nameEdit = $("#fname").val();
                for (var i = 0; i < nameEdit.length; i++) {
                    nameEdit = nameEdit.replace(" ", "_");
                }
                $("#fname").val(nameEdit);
                var data = new FormData($("#formadd").get(0));
             
                $.ajax({
                    method: 'Post',
                    url: '/Admin/CategoryOperation/Create',
                    data: data,
                    processData: false,
                    contentType: false,
                    success: function () {
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'Item has been added successfully',
                            showConfirmButton: false,
                            timer: 1500
                        })
                        $("#btnClose").click();
                        var Table = $("#Estates").DataTable();
                        Table.draw(false);
                    }
                });
            }

          
           
        });
        $("#formadd").on("submit", function (e) {
            e.preventDefault();
        })


        function IsActive(Id) {
         
            $.ajax({
                method: 'Get',
                url: `/Admin/Estate/ActiveEstate/${Id}`,
                data: {Id},
                    processData: false,
                    contentType: false,
                    success: function (status) {
                        $("#btnClose").click();
                        if (status) {
                            Swal.fire({
                                position: 'top-end',
                                icon: 'نجاح',
                                title: 'تم التقييد ',
                                showConfirmButton: false,
                                timer: 1500
                            })
                        } else {
                             Swal.fire({
                                position: 'top-end',
                                icon: 'نجاح',
                                title: 'تم التفعيل بنجاح',
                                showConfirmButton: false,
                                timer: 1500
                            })
                        }
                       
                        var Table = $("#Estates").DataTable();
                        Table.draw(false);
                    }
                });
        }

        $("#btnEdit").on("click", function () {
