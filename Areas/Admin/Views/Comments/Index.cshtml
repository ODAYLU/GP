@model IEnumerable<Comments>
<h3>Comments</h3>
<hr />

<div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Comment Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <label asp-for="@Model"></label>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
@*        <button type="button" class="btn btn-primary">Understood</button>
*@      </div>
    </div>
  </div>
</div>
</div>



<table class="table table-stripped">
    <thead>
        <tr>
            <th>
                Id
            </th> 
            <th>
               User
            </th> 
            <th>
                Comment
            </th>
        
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                 <td>@item.Id</td>
            <td>@item.AppUser</td>
            <td><span style="display:block;text-overflow: ellipsis;width: 200px;overflow: hidden; white-space: nowrap;">
@item.Body
	</span></td>
            <td><a type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
Details</a>
</td>
            </tr>
           

        }
    </tbody>
</table>

