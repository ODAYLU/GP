@page
@model IndexModel
@{
    //ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index; 
}


<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

         
            <div class="text-center">
              <p class=" fw-bold borderbottom fs-3 d-inline-block">البيانات الشخصية</p>
            </div>

                <div class="form">
                  <form id="profile-form" method="post" enctype="multipart/form-data">
                    <div class="row">
                      <div class="col-12">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                       
                          <div class="form-group">
                            <label asp-for="Username">البريد الالكتروني </label>
                            <input asp-for="Username" class="form-control rounded-pill" disabled class="txt" />
                          </div>
        
                        <div class="row">
                             <div class="col-12 col-md-6">
                              <div class="form-group">
                                <label asp-for="Input.fristName"></label>
                                <input asp-for="Input.fristName" class="form-control rounded-pill" class="txt" />
                                <span asp-validation-for="Input.fristName" class="text-danger "></span>
                              </div>
                            </div>

                            <div class="col-12 col-md-6">
                              <div class="form-group">
                                <label asp-for="Input.lastName"></label>
                                <input asp-for="Input.lastName" class="form-control rounded-pill" class="txt" />
                                <span asp-validation-for="Input.lastName" class="text-danger"></span>
                              </div>
                            </div>
                        </div>
                       
                          <div class="form-group">
                            <label asp-for="Input.description"></label>
                            <textarea asp-for="Input.description" class="form-control" style="border-radius: 1rem;" rows="6" maxlength="200"
                              class="txt"></textarea>
                            <span asp-validation-for="Input.description" class="text-danger"></span>
                          </div>
                        <div class="row ">
                             <div class="col-12 col-md-6">
                                  <div class="form-group">
                                    <label asp-for="Input.PhoneNumber"></label>
                                    <input asp-for="Input.PhoneNumber" class="form-control rounded-pill" class="txt" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                  </div>
                                </div>

                                <div class="col-12 col-md-6">
                                  <div class="form-group">
                                    <label asp-for="Input.ContactNumber"></label>
                                    <input asp-for="Input.ContactNumber" class="form-control rounded-pill" class="txt" />
                                    <span asp-validation-for="Input.ContactNumber" class="text-danger"></span>
                                  </div>
                                </div>
                        </div>
                       
                         <div class="row">
                              <div class="col-12 col-md-4">
                              <div class="form-group">
                                <label asp-for="Input.face"></label>
                                <input asp-for="Input.face" class="form-control rounded-pill" class="txt" />
                                <span asp-validation-for="Input.face" class="text-danger"></span>
                              </div>
                            </div>
                            <div class="col-12 col-md-4">
                              <div class="form-group">
                                <label asp-for="Input.twitter"></label>
                                <input asp-for="Input.twitter" class="form-control rounded-pill" class="txt" />
                                <span asp-validation-for="Input.twitter" class="text-danger"></span>
                              </div>
                            </div>
                            <div class="col-12 col-md-4">
                              <div class="form-group">
                                <label asp-for="Input.insta"></label>
                                <input asp-for="Input.insta" class="form-control rounded-pill" class="txt" />
                                <span asp-validation-for="Input.insta" class="text-danger"></span>
                              </div>
                            </div>

                        </div>
                       


                          <div class="custom-file mt-2" hidden>
                            <input type="file" accept="image/*" asp-for="Input.ProfilePicture" class="custom-file-input rounded-pill"
                              onchange="document.getElementById('prof').src=window.URL.createObjectURL(this.files[0])" />
                            <label class="custom-file-label" asp-for="Input.ProfilePicture">Choose Picture .....
                            </label>
                            <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                          </div>

                        <div class="row">
                          <button id="update-profile-button " type="submit" class="btn col-10 btn-success  rounded-pill">حفظ</button>

                          <div class="col pe-4 ps-0">
                              <a class="btn btn-warning  rounded-pill @ManageNavPages.ChangePasswordNavClass(ViewContext)"
                              id="change-password" style=" background-color:#ffdead4d; color:var(--secondery);" asp-page="./ChangePassword">كلمة المرور</a>
                          </div>

                        </div>


                      </div>

                    </div>
                  </form>
                </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />


}