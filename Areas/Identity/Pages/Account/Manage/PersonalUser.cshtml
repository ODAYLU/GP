@page
@model GP.Areas.Identity.Pages.Account.Manage.PersonalUserModel
@{

     Layout = "_Layout - User.cshtml";

       @inject UserManager<AppUser> _userManager;
   
   
            var user = await _userManager.GetUserAsync(User);
}

<style>

  .profile-pic {
    color: transparent;
    transition: all 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    transition: all 0.3s ease;
 }
 
  .profile-pic img {
    position: absolute;
    object-fit: cover;
    width: 165px;
    height: 165px;
    box-shadow: 0 0 10px 0 rgba(255, 255, 255, .35);
    border-radius: 100px;
    z-index: 0;
 }
  .profile-pic .-label {
    cursor: pointer;
    height: 165px;
    width: 165px;
    border-radius: 165px !important;
 }

  .profile-pic:hover .-label {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(0, 0, 0, .8);
    z-index: 10000;
    color: #fafafa;
    transition: background-color 0.2s ease-in-out;
    border-radius: 100px;
    margin-bottom: 0;
    
 }
  .profile-pic span {
    display: inline-flex;
    padding: 0.2em;
    height: 2em;
 }
  

</style>
<partial name="_StatusMessage" model="Model.StatusMessage" />

 <div id="personal" class="h-100  rounded-3 justify-content-center align-items-center" style="display: block;">                                                                  
    <div class="row">       
         <div class="profile-pic">
            <label class="-label" for="file">
                <span class="glyphicon glyphicon-camera"></span>
                <span>تغيير الصورة</span>
            </label>
                 @{
                     
                     if (user.ProfilePicture is not null)
                     {
                          <img class="profile-picture" alt="Profile" src="data:image/*;base64,@(Convert.ToBase64String(user.ProfilePicture))"/>
                     }

                    else
                    {
                        <img  id="prof"  class="profile-picture" alt="Profile" src="https://cdn.pixabay.com/photo/2017/08/06/21/01/louvre-2596278_960_720.jpg"/>
                    }
                }
                <input onclick="clickOn()" id="file"     class="d-none"/>
                

        </div>
        <div class=" mt-lg-5 text-end">
               <form id="profile-form" method="post" enctype="multipart/form-data">
         <div class="row">
           <div class="col-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-12">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control rounded-pill" disabled class="txt" />
                </div>
                  </div>
                  
                  
                  <div class="col-12 d-flex">
                     <div class="form-group">
                        <label asp-for="Input.fristName"></label>
                        <input asp-for="Input.fristName" class="form-control rounded-pill" class="txt" />
                        <span asp-validation-for="Input.fristName" class="text-danger"></span>
                    </div>


                      <div class="form-group">
                        <label asp-for="Input.lastName"></label>
                        <input asp-for="Input.lastName" class="form-control rounded-pill"  class="txt"/>
                        <span asp-validation-for="Input.lastName" class="text-danger"></span>
                    </div>


                  </div>
                 


                  <div class="col-12 d-flex">
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control rounded-pill" class="txt"/>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                     
                    <div class="form-group">
                        <label asp-for="Input.ContactNumber"></label>
                        <input asp-for="Input.ContactNumber" class="form-control rounded-pill" class="txt"/>
                        <span asp-validation-for="Input.ContactNumber" class="text-danger"></span>
                    </div>
                     
                 </div>
                 <div class="col-12">
                 <div class="custom-file mt-2"hidden>
                        <input type="file" 
                        accept="image/*"
                        asp-for="Input.ProfilePicture"
                        class="custom-file-input rounded-pill"
                        onchange="document.getElementById('prof').src=window.URL.createObjectURL(this.files[0])"
                        />
                        <label class="custom-file-label"  asp-for="Input.ProfilePicture">Choose Picture ..... </label>
                   <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                   </div>
                    </div>

                <div class="d-flex justify-content-evenly">
                <button id="update-profile-button" type="submit" class="btn btn-primary btn1">Save</button>
                    <div class="nav-item text-white"><a class="  text-white nav-link btn btn-primary " id="change-password" asp-page="./ChangePassword">Password</a></div>
     </div>
  </div>
   
  </div>
    </form>
        </div>
    </div>
</div>

@section Scripts{


  
     <script>
        function clickOn(){
            var x = document.getElementsByClassName('custom-file-input')[0];
            x.click();
        }

       
     </script>
    
    
}