@page
@model LoginModel

@{
  Layout = "/Views/Shared/_Layout.cshtml";
}

<html lang="ar">
<head>
  <link rel="shortcut icon" href="~/indexLayout/assets/img/logo/logo.png">
  <link href="~/indexLayout/assets/bootstrap/bootstrap4.min.css" rel="stylesheet">
  <link href="~/indexLayout/assets/bootstrap/bootstrap5.min.css" rel="stylesheet">
  <link href="~/indexLayout/assets/bootstrap/font-awesome.min.css" rel="stylesheet">
  <link href="~/indexLayout/assets/bootstrap/bootstrap-icons.css" rel="stylesheet">
  <link href="~/indexLayout/assets/bootstrap/animate.min.css" rel="stylesheet">
  <link href="~/indexLayout/assets/bootstrap/aos.css" rel="stylesheet">
  <link href="~/indexLayout/assets/css/swiper.css" rel="stylesheet" />
  <link href="~/indexLayout/assets/css/profile.css" rel="stylesheet">
  <link href="~/indexLayout/assets/css/style.css" rel="stylesheet">
  <link rel="stylesheet" href="~/login/bulma.min.css" />
    <style>
        .header{
            padding:0 !important;
        }
        .navbar{
            background-color:var(--green);
        }
                .dropdown-item {
            color:#fff;
        }
        body{
            overflow:hidden;
        }
.padable{
    padding: 3em;
    color:var(--txtactive);
}
.main-section{
  height: 100vh;
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: center;
}
.component-row{
  overflow: hidden;
  border-radius: 12px;
  box-shadow: 0px 0px 5px #858585;
}
.component-row h1{
  font-weight: bold;
  margin-bottom: 1em;
  font-size: 1.8em;
  position: relative;
}
.line{
  width: 90px;
  border-bottom: 6px solid #005c4b;
  position: absolute;
  top: 50%;right: 6em;
}
.illustrator{position: relative;}
.circle {
    border-radius: 50%;
    width: 900px !important;
    height: 900px !important;
    background-color: #005c4b;
    position: absolute;
    top: -12px !important;
    left: -27em;
    border: 8px solid rgba(255,255,255,0.8);
}
.circle-main {
    border-radius: 50%;
    width: 600px;
    height: 600px;
    background-color: #005c4b;
    position: absolute;
    bottom: -20em;
    right: -20em;
}
.circle-main-m {
    border-radius: 50%;
    width: 100px;
    height: 100px;
    position: absolute;
    bottom: 1.2em;
    right: 14em;
    background-color: #005c4b;
    background-image: linear-gradient(315deg, #005c4b 0%, #8fa177 100%);
}
.circle-main-s {
    border-radius: 20%;
    width: 60px;
    height: 60px;
    position: absolute;
    bottom: 15em;
    background-color: #005c4b;
    background-image: linear-gradient(315deg, #005c4b 0%, #ffffff 100%);
}
.input:active, .input:focus, .is-active.input, .is-active.textarea, .is-focused.input, .is-focused.textarea, .select select.is-active, .select select.is-focused, .select select:active, .select select:focus, .textarea:active, .textarea:focus {
  border-color: #005c4b;
  box-shadow: 0 0 0 0.125em #005c4b9b;
  color: #005c4b;
}
.form-check-input:checked {
  background-color: #005c4b;
  border-color: #005c4b;
}
.bgcolors{
  background-color: #005c4b; 
}
.colors{
  color: #858585; 
  border-bottom:1px solid #858585;
}
a:hover {
  color:  #005c4bc2 ;
}
.form-control {
    background-color: var(--form) !important;
    color: var(--txtactive) !important;
    border: 1px solid #a6a6a691 !important;
}
.form-control::placeholder {
  color: #dbdbdb;
}
</style>
</head>
<body dir="rtl" >

    <section class="mt-5">
        <div class="circle-main"></div>
        <div class="circle-main-m"></div>
        <div class="circle-main-s"></div>

        <div class="container white-bg">
            <div class="columns background component-row">

                <div class="column ">
                    <div class="padable text-end">
                        <h1>
                            تسجيل دخول
                            <span class="line"></span>
                            <span>
                                <!--الايقونات -->
                            </span>

                        </h1>
                        <span class="text-danger">@ViewData["Error"]</span>
                        <form id="account" method="post">
                            <div class="field">
                                
                                <div class="control has-icons-left has-icons-right">
                                    <input asp-for="Input.Email" class="input is-medium form-control rounded-pill" type="text" placeholder="البريد الالكتروني" value="" required>
                                    <span class="icon is-small is-right">
                                        <i class="bi bi-person-fill"></i>
                                    </span>
                                </div>
                                <p class="text-danger"></p>
                            </div>

                            <div class="field">
                                <div class="control has-icons-left has-icons-right">
                                    <input asp-for="Input.Password" class="input is-medium form-control rounded-pill" type="password"  id="password" placeholder="كلمة المرور">
                                    <span class="icon is-small is-right">
                                        <i class="bi bi-lock-fill"></i>
                                    </span>
                                    <span class="is-small position-absolute justify-content-center " style="color: #dbdbdb; left: 20px; top:10px;">
                                        <i class="bi bi-eye-slash" id="togglePassword"></i>

                                    </span>
                                </div>
                                <p class="text-danger"></p>
                            </div>

                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Input.RememberMe" />
                                        تذكرني
                                    </label>
                                </div>
                            </div>

                            <br />

                            <div class="pb-3">
                                <button type="submit" class="col-12 btn bgcolors text-white rounded-pill">تسجيل دخول</button>
                            </div>
                            <div>
                                <a class="colors" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">انشاء حساب</a>
                            </div>


                        </form>
                    </div>
                </div>

                <div class="column d-md-none d-lg-block">
                    <div class="illustrator ">
                        <lottie-player src="https://assets2.lottiefiles.com/packages/lf20_4u33kbls.json" background="transparent" speed="2" style="width: 550px; height: 500px;left:10px; position: absolute;z-index: 100;" autoplay></lottie-player>
                        <div class="circle"></div>
                    </div>
                </div>


            </div>
        </div>


    </section>


       <script src="~/js/Login/all.js"></script>
    <script src="~/js/Login/lottie-player.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    </body>

</html>
