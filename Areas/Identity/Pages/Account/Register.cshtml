@page
@model GP.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Views/Shared/_Layout.cshtml"; 
}
  <link rel="stylesheet" href="~/login/bulma.min.css" />

    <style>
        .header{
            padding:0 !important;
        }
        .navbar{
            background-color:var(--green);
        }
                .dropdown-item {
            color:#fff;
        }
       /* body{
            overflow:hidden;
        }*/
.padable{
    padding: 3em;
    color:var(--txtactive);
}
.main-section{
  height: 100vh;
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: center;
}
.component-row{
    overflow:hidden;
  border-radius: 12px;
  box-shadow: 0px 0px 5px #858585;
}
.component-row h1{
  font-weight: bold;
  margin-bottom: 1em;
  font-size: 1.8em;
  position: relative;
}
.line{
  width: 90px;
  border-bottom: 6px solid #005c4b;
  position: absolute;
  top: 50%;right: 6em;
}
.illustrator{position: relative;}
.circle {
    border-radius: 50%;
    width: 900px !important;
    height: 900px !important;
    background-color: #005c4b;
    position: absolute;
    top: -12px !important;
    left: -27em;
    border: 8px solid rgba(255,255,255,0.8);
}
.input:active, .input:focus, .is-active.input, .is-active.textarea, .is-focused.input, .is-focused.textarea, .select select.is-active, .select select.is-focused, .select select:active, .select select:focus, .textarea:active, .textarea:focus {
  border-color: #005c4b;
  box-shadow: 0 0 0 0.125em #005c4b9b;
  color: #005c4b;
}
.form-check-input:checked {
  background-color: #005c4b;
  border-color: #005c4b;
}
.bgcolors{
  background-color: #005c4b; 
}
.colors{
  color: #858585; 
  border-bottom:1px solid #858585;
}
a:hover {
  color:  #005c4bc2 ;
}
.form-control {
    background-color: var(--form) !important;
    color: var(--txtactive) !important;
    border: 1px solid #a6a6a691 !important;
}
.form-control::placeholder {
  color: #dbdbdb;
}
.xx{
    margin-bottom:120px !important;
}

</style>



      <section class="xx my-5" >
        <div class="container white-bg">
            <div class="row background component-row">

                <div class="col">
                    <div class="padable text-end">
                        <h1>
                            تسجيل جديد
                            <span class="line"></span>

                        </h1>

                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <span class="text-danger">@ViewData["Error"]</span>
                            <span class="text-danger" asp-validation-for="ModelState"></span>
                              <div class="row mb-3">
                                <div class="col">
                                    <div class="field">
                                        <div class="control has-icons-left has-icons-right">
                                            <input asp-for="Input.FirstName" class="input is-medium form-control rounded-pill fs-5" type="text" placeholder="الاسم الاول" />
                                            
                                            <span  class="icon is-small is-right">
                                                <i class="bi bi-person-fill"></i>
                                            </span>
                                            <span class="text-danger d-flex text-align-start" asp-validation-for="Input.FirstName"></span>
                                        </div>
                                 
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="field">
                                        <div class="control has-icons-left has-icons-right">
                                            <input asp-for="Input.LastName" class="input is-medium form-control rounded-pill fs-5"  placeholder="اسم الثاني" />
                                            <span class="icon is-small is-right">
                                                <i class="bi bi-person-fill"></i>
                                            </span>
                                             <span class="text-danger d-flex text-align-start" asp-validation-for="Input.LastName"></span>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control has-icons-left has-icons-right">

                                    <input asp-for="Input.Email" class="input is-medium form-control rounded-pill fs-5" placeholder="البريد الالكتروني"  />
                                     <span class="icon is-small is-right " >
                                       <i class="bi bi-envelope"></i>
                                    </span>
                                    <span class="text-danger d-flex text-align-start" asp-validation-for="Input.Email"></span>
                                </div>
                            </div>

                            <div class="field">
                                <div class="control has-icons-left has-icons-right">
                                    <input  asp-for="Input.Password" class="input is-medium form-control rounded-pill fs-5" type="password" id="password" placeholder="كلمة المرور">
                                    <span class="icon is-small is-right " >
                                <i class="bi bi-lock"></i>   
                                    </span>
                                    <span asp-validation-for="Input.Password" class="text-danger d-flex text-align-start">
                                        
                                    </span>
                        
                                </div>
                            </div>

                            <div class="field">
                                <div class="control has-icons-left has-icons-right">
                                    <input asp-for="Input.ConfirmPassword" class="input is-medium form-control rounded-pill  fs-5" placeholder="تاكيد كلمة المرور" value="" required>
                                 <span class="icon is-small is-right " >
                                <i class="bi bi-lock"></i>   
                                    </span>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger d-flex text-align-start">
                                       
                                    </span>
                                </div>
                            </div>


                            <div class="field">
                                <div class="form-check text-end fs-5 ">
                                    <div class="form-check d-inline-block">
                                        <label asp-for="Input.IsQwner">هل انت صاحب عقار؟</label>
                                        <input asp-for="Input.IsQwner" id="InputCheck" />
                                        <span asp-validation-for="Input.IsQwner" class="text-danger" ></span>
                                    </div>
                                </div>
                                  
                            </div>
                            <br />


                            <div class="pb-3">
                                <button type="submit" id="btnSubmit" class="col-12 btn bgcolors text-white rounded-pill">تسجيل دخول</button>
                            </div>
                            <div>
                                <a class="colors" asp-route-returnUrl="@Model.ReturnUrl" asp-page="./Login">هل لديك حساب؟</a>
                            </div>



                        </form>
                    </div>
                </div>

                <div class="col d-md-none d-lg-block">
                    <div class="illustrator ">
                        <lottie-player src="https://assets2.lottiefiles.com/packages/lf20_4u33kbls.json" background="transparent" speed="2" style="width: 600px; height: 700px;left:0px; position: absolute;z-index: 100;" autoplay></lottie-player>
                        <div class="circle"></div>
                    </div>
                </div>

            </div>
        </div>


    </section>
        @section Scripts{

            @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }


        }
