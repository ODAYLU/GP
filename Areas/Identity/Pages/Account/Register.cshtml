@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="container">

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.FirstName"></label>
                        <input asp-for="Input.FirstName" class="form-control" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.LastName"></label>
                        <input asp-for="Input.LastName" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <select asp-for="Input.Role">
                        <option value="User">Customer</option>
                        <option value="Owner">Real Estate Owner</option>
                    </select>
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
                <div class="col-md-6">
                    
                    <img id="image" src="/images/unknown-person-icon-Image-from.png"  class="img-fluid"/>
                    <div class="custom-control">
                        <label class="custom-file-label" asp-for="Input.Image"></label>
                        <input asp-for="Input.Image" class=" custom-file-input" onchange="img_pathUrl(this)" />
                        <span asp-validation-for="Input.Image" class="text-danger"></span>
                    </div>
                </div>
            </div>


        </form>

   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
<script>
    function img_pathUrl(input) {
        $('#image')[0].src = (window.URL ? URL : webkitURL).createObjectURL(input.files[0]);
    }
</script>
}
