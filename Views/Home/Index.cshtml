function AddLike(Id,el) {
   
      $.ajax({
            method: 'Get',
            url: `/Estate/AddLikes/${Id}`,
            data: JSON.stringify({ id: Id }),
            success: function (count) {
   //             var x = $(el).children("span").text();
   // alert(x);
   //var num = parseInt(x); 
   $(el).children("span").text(count);
            }
 });
}   
