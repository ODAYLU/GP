@model GP.Models.Comments;
@{
       ViewData["ActivePage"] = ManageNavPages.IndexComment; 

    ViewData["Title"] = "التعليقات";
}

@{
    Layout = "/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
}
<hr />
@*<link rel="stylesheet" href="~/limonte-sweetalert2/sweetalert2.min.css" />*@
<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">

    <div class="modal-dialog">
        <div class="modal-content">
            <div style="margin:10px!important;">
                <form id="formadd" method="post">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-12">
                            <div class="form-group" hidden>
                                <label for="edit_name_en" class="my-3">الرقم</label>
                                <input id="id" asp-for="@Model.Id" class="form-control" placeholder="Id" name="Id" />
                                <span asp-validation-for="@Model.Id" class="text-danger span"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">

                                <img style="max-width:200px;max-height:200px;" id="image" src="" alt="Estate" />
                                <input id="fname" asp-for="@Model.Body" class="form-control" required name="name" />
                                <span asp-validation-for="@Model.Body" class="text-danger span"></span>
                            </div>
                        </div>
                        <div id="reps">
                        </div>


                    </div>

                    <button id="btnClose" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button id="btnAdd" type="submit" class="btn btn-outline-primary">Add</button>
                    @*<button id="btnEdit" type="submit" class="btn btn-outline-primary">Edit</button> *@
                </form>
            </div>

        </div>
    </div>
</div>

<table id="Comments" class="table table-striped table-bordered w-100 flex-nowrap" style="direction:rtl;">
    <thead>
        <tr>
            <th>الرقم</th>
            <th> التعليق </th>
            <th> التقييم </th>
            <th></th>

        </tr>
    </thead>
</table>

@section Scripts{
    @(await Html.PartialAsync("_ValidationScriptsPartial"));
<script src="~/assets/bootstrap/bootstrap5.bundle.min.js"></script>
<script src="~/assets/bootstrap/jquery-3.1.0.min.js" type="text/javascript"></script>
<script src="~/assets/bootstrap/ajax_query.min.js"></script>
<script src="~/SweetAlert/sweetalert2@11.js"> </script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $("#Comments").DataTable({
            "processing": true,
            "serverSide": true,
            "filter": true,
            "responsive": true,
            "lengthMenu": [10, 20, 30, 40, 50],
            "language": {
                "search": "ابحث",
                "lengthMenu": "عرض _MENU_ صفوف"
            },
            "ajax": {
                "url": '/api/Api/GetComments',
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs": [{
                "targets": 0,
                "visible": false,
                "searchable": false
            }],
            "columns": [
                { "data": "id", "name": "Id", "autowidth": true },

                {
                    "data":"body","name":"Body",
                    "render":function (data,type,row){
                    return `<a id="d" href="#" style="color:black; text-decoration: none;display:block;text-overflow: ellipsis;width: 200px;overflow: hidden; white-space: nowrap;" onclick=Details(${row.id})>${data}</a>`
                    },
                 },
                 {"data":"rating","name":"Rating","autowidth": true},
                {
                   "render": function (data, type, row) { return '<a href="#" class="btn btn-outline-danger" onclick=DeleteCustomer(' + row.id + '); > Delete </a>' },
                   "orderable": false
                },
            ],
        });
    });

    function Details(Id)
    {
          var table = $("#Comments").DataTable();
          var data = table.data().filter(function(elm) {return elm.id == Id});
           // console.log(data[0]);
           var myModal = new bootstrap.Modal(document.getElementById('staticBackdrop'),{
           keyboard: false});
           myModal.show();
           $.ajax({
           type:"POST",
           url: `/Commments/Details/${Id}`,
           dataType: "json",
               success: function (data)
               {
                   console.log(data[0]);
                      console.log(data.length);
                   // console.log(data[0].comments);
                    var image=data[0].comments.estate.main_photo;
                    document.getElementById("image").src=`/images/Estate/${image}`;
                    var dat=data.length;
                    console.log(data.length);
                  //  console.log(data[0].body);
                    for(let i=0;i<dat;i++)
                    {
                       const node = document.createElement("p");
                       const textnode = document.createTextNode(data[i].body);
                       node.appendChild(textnode);
                       document.getElementById("reps").appendChild(node);

                    }
                    

               }
        ,
       error: function (xhr, exception) {
           console.log(exception);
           console.log(xhr);
            var msg = "";
            if (xhr.status === 0) {
                msg = "Not connect.\n Verify Network." + xhr.responseText;
            } else if (xhr.status == 404) {
                msg = "Requested page not found. [404]" + xhr.responseText;
            } else if (xhr.status == 500) {
                msg = "Internal Server Error [500]." +  xhr.responseText;
            } else if (exception === "parsererror") {
                msg = "Requested JSON parse failed.";
            } else if (exception === "timeout") {
                msg = "Time out error." + xhr.responseText;
            } else if (exception === "abort") {
                msg = "Ajax request aborted.";
            } else {
                msg = "Error:" + xhr.status + " " + xhr.responseText;
            }
            }
         });
          document.getElementById("fname").value=data[0].body;
    }



     $('#btnClose').on("click",function(){
         console.log("Clear");
           var myModal = new bootstrap.Modal(document.getElementById('staticBackdrop'),{
           keyboard: false});
           myModal.hide();
       var div=document.getElementById("reps");
       div.innerHTML=" ";


     })
    function EditItem(data) {
        $(".span").text("");
        $("#btnAdd").hide();
        $("#btnEdit").show();
        $("#id").val(data.id);
        $("#fname").val(data.name);
    }
    function DeleteCustomer(Id)
          {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33 ',
                confirmButtonText: 'نعم ، احذفها!',
                cancelButtonText: "الغاء",    

            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        method: 'Get',
                        url: `/Commments/DeleteComment/${Id}`,
                        data: JSON.stringify({ id: Id }),
                        success: function () {
                           
                             Swal.fire({
                                 title:   'تم الحذف!',
                                  position: 'top-end',
                                 icon: 'success',
                                 showConfirmButton: false,
                                 timer: 1500,
                              
                                                        
                                 
                            

                                })
                            var Table = $("#Comments").DataTable();
                            Table.draw(false);
                        }
                    });

                }
            })

        }
    $("#Add").on("click", function () {
        $("#btnAdd").show();
        $("#btnEdit").hide();
        $("input").val("");
        $(".span").text("");
    });
    function img_pathUrl(input) {
        $('#image')[0].src = (window.URL ? URL : webkitURL).createObjectURL(input.files[0]);
    }
    $("#btnAdd").on("click", function () {


        if ($("#fname").val() != "") {
            var nameEdit = $("#fname").val();
            for (var i = 0; i < nameEdit.length; i++) {
                nameEdit = nameEdit.replace(" ", "_");
            }
            $("#fname").val(nameEdit);
            var data = new FormData($("#formadd").get(0));

            $.ajax({
                method: 'Post',
                url: '/Commments/Create',
                data: data,
                processData: false,
                contentType: false,
                success: function () {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'Item has been added successfully',
                        showConfirmButton: false,
                        timer: 1500
                    })
                    $("#btnClose").click();
                    var Table = $("#Cities").DataTable();
                    Table.draw();
                }
            });
        }
    });
    $("#formadd").on("submit", function (e) {
        e.preventDefault();
    })
    $("#btnEdit").on("click", function () {
        if ($("#fname").val() != "") {
            var nameEdit = $("#fname").val();
            for (var i = 0; i < nameEdit.length; i++) {
                nameEdit = nameEdit.replace(" ", "_");
            }
            $("#fname").val(nameEdit);
            var data = new FormData($("#formadd").get(0));

            $.ajax({
                method: 'Post',
                url: '/Admin/City/Edit',
                data: data,
                processData: false,
                contentType: false,
                success: function () {
                    $("#btnClose").click();
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'تم التعديل بنجاح',
                        showConfirmButton: false,
                        timer: 1500
                    })
                    var Table = $("#Cities").DataTable();
                    Table.draw();
                }
            });
        }
    })

</script>
}

