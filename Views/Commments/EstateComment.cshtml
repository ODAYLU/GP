  opacity: 0.7;
  transform: scale(0.9);
}
/*   Light Box Styling  */
 .light-box {
  top: 0;
  left: 0;
  visibility: hidden;
  opacity: 0;
  height: 100%;
  background-color: rgb(35 35 35 / 61%);
  backdrop-filter: blur(0.3rem);
  transition: 500ms ease;
  position: absolute;
  z-index: 1000;
  text-align: right;
}
.light-box:target {
  visibility: visible;
  opacity: 1;
}

.edges {
