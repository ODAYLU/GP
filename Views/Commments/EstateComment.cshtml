@model Estate;
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="ar">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>أملاك</title>
    <link rel="shortcut icon" href="assets/img/logo/logo.png">
    <link href="~/assets/bootstrap/bootstrap4.min.css" rel="stylesheet">
    <link href="~/assets/bootstrap/bootstrap5.min.css" rel="stylesheet">
    <link href="~/assets/bootstrap/font-awesome.min.css" rel="stylesheet">
    <link href="~/assets/bootstrap/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/bootstrap/animate.min.css" rel="stylesheet">
    <link href="~/assets/bootstrap/aos.css" rel="stylesheet">
    <link href="~/assets/css/swiper.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet">
    <style>
        /*****************تفاصيل*************************/


        .image-thumbnail {
            display: inline-block;
            cursor: pointer;
            box-shadow: 3px 2px 5px #444;
            transition: 300ms ease;
        }

        .home {
            height: 100%;
        }

        .gallery:hover .image-thumbnail:not(:hover) {
            filter: blur(2px) grayscale(1);
            opacity: 0.7;
            transform: scale(0.9);
        }

        /*   Light Box Styling  */
        .light-box {
            top: 0;
            left: 0;
            visibility: hidden;
            opacity: 0;
            height: 100%;
            background-color: rgb(35 35 35 / 61%);
            backdrop-filter: blur(0.3rem);
            transition: 500ms ease;
            position: absolute;
            z-index: 1000;
            text-align: right;
        }

        .light-box:target {
            visibility: visible;
            opacity: 1;
        }

        .edges {
            height: auto;
            background-color: #ccc;
            padding: 20px;
            margin: 150px auto;
            box-shadow: 0 0 30px #333;

        }
    </style>

</head>

<body dir="rtl">

   


    <section class="pb-5">


        <div class="container-fluid container-md">
            <div class="row ">
                <div class="col-12 col-md-9 p-0">
                    <a class="image-thumbnail home" href="#lightbox_1"><img
                            src="http://www.anipedia.net/imagenes/elefantes-800x375.jpg" class="img-fluid h-100"></a>
                </div>
                <div class="col-12 col-md-3 d-flex d-md-block gallery">
                    <a class="image-thumbnail" href="#lightbox_2"><img
                            src="http://www.anipedia.net/imagenes/imagen-aguilas-800x375.jpg" class=" img-fluid"></a>
                    <a class="image-thumbnail" href="#lightbox_3"><img
                            src="http://www.anipedia.net/imagenes/conejos-800x375.jpg" class="img-fluid"></a>
                    <a class="image-thumbnail" href="#lightbox_4"><img
                            src="http://www.anipedia.net/imagenes/gatos-800x375.jpg" class=" img-fluid"></a>

                </div>
            </div>





            <div class="light-box modal-content" id="lightbox_1">
                <div class="row edges align-items-baseline">
                    <span class="close-btn d-inline"><a href="#"><i
                                class="bi bi-x-lg fs-1 position-absolute"></i></a></span>

                    <div class="col p-0">
                        <span class="next-btn "><a href="#lightbox_2"><i class="bi bi-arrow-right fs-1"></i></a></span>
                    </div>
                    <div class="col-10 p-0">
                        <img src="http://www.anipedia.net/imagenes/elefantes-800x375.jpg"
                            class="img-fluid position-relative" />
                    </div>
                    <div class="col p-0">
                        <span class="previous-btn "><a href="#lightbox_6"><i
                                    class="bi bi-arrow-left fs-1"></i></a></span>
                    </div>
                </div>
            </div>


            <div class="light-box modal-content" id="lightbox_2">
                <div class="row edges align-items-baseline">
                    <span class="close-btn d-inline"><a href="#"><i
                                class="bi bi-x-lg fs-1 position-absolute"></i></a></span>

                    <div class="col p-0">
                        <span class="next-btn "><a href="#lightbox_3"><i class="bi bi-arrow-right fs-1"></i></a></span>
                    </div>
                    <div class="col-10 p-0">
                        <img src="http://www.anipedia.net/imagenes/conejos-800x375.jpg"
                            class="img-fluid position-relative" />
                    </div>
                    <div class="col p-0">
                        <span class="previous-btn "><a href="#lightbox_6"><i
                                    class="bi bi-arrow-left fs-1"></i></a></span>
                    </div>
                </div>
            </div>

            <div class="light-box modal-content" id="lightbox_3">
                <div class="row edges align-items-baseline">
                    <span class="close-btn d-inline"><a href="#"><i
                                class="bi bi-x-lg fs-1 position-absolute"></i></a></span>

                    <div class="col p-0">
                        <span class="next-btn "><a href="#lightbox_4"><i class="bi bi-arrow-right fs-1"></i></a></span>
                    </div>
                    <div class="col-10 p-0">
                        <img src="http://www.anipedia.net/imagenes/gatos-800x375.jpg"
                            class="img-fluid position-relative" />
                    </div>
                    <div class="col p-0">
                        <span class="previous-btn "><a href="#lightbox_2"><i
                                    class="bi bi-arrow-left fs-1"></i></a></span>
                    </div>
                </div>
            </div>




            <div class="row py-4 text-end ">
                <div class="col-12 col-md-9 ">
                    <div class="pe-xl-5">
                        <p class="fs-2 ">عنوان العقار</p>
                        <p><i class="bi bi-geo-alt-fill"></i> @Model.State.name _@Model.City.name</p>
                        <div class="d-flex justify-content-between align-items-center fs-5">
                            <p><i class="bi bi-building"></i> نوع العقار: @Model.Category.category </p>
                            <p><i class="bi bi-aspect-ratio"></i> مساحة العقار : @Model.space م </p>
                            <p><i class="bi bi-cash"></i> سعر العقار :@Model.price $</p>
                        </div>
                        <div>
                            <p class="fs-5">خدمات العقار :<ul class="d-flex">@{foreach(var ser in ViewBag.services){ 
                            <li >@ser</li>
                        }} </ul>  </p>
                        </div>
                       
                        <div class="pt-5">
                            <p class="fs-5 fw-bold">تفاصيل العقار</p>
                            <p> 
                                @Model.description
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-3">
                    <div class="card text-center p-2 align-items-center">
                   @{

                  if (Model.Users.ProfilePicture is not null)
                  {
                  <img id="prof" class="img-fluid rounded-circle" style="width: 150px;height: 150px;"  alt="Profile"
                    src="data:image/*;base64,@(Convert.ToBase64String(Model.Users.ProfilePicture))" />
                  }

                  else
                  {
                  <img id="prof" class="img-fluid rounded-circle" style="width: 150px;height: 150px;" alt="Profile"
                    src="~/indexLayout/assets/img/pages/user.jpg" />

                  }
                  }
                         
                        <div class="card-body">
                            <h5 class="card-title">@Model.Users.FirstName @Model.Users.LastName</h5>
                            <p class="card-text"> @Model.Users.decription.
                            </p>
                            <a href="#" class="btn btn-primary"> عرض الصفحة الشخصية </a>
                        </div>
                    </div>

                    <span class="fs-6 d-block text-secondary"><i class="bi bi-eye-fill px-1"></i> المشاهدات @Model.Views + </span>
                    <span class="fs-6 d-block text-secondary"><i class="bi bi-clock-fill px-1"></i>  @Model.OnDate  </span>



                </div>
            </div>

        </div>

    </section>
        
</body>

</html>

 
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    <script src="~/assets/bootstrap/bootstrap5.bundle.min.js"></script>
    <script src="~/assets/bootstrap/ajax_query.min.js"></script>
    <script src="~/assets/bootstrap/wow.min.js"></script>
    <script src="~/assets/bootstrap/aos.js"></script>
    <script src="~/assets/js/swipar.js"></script>
    <script src="~/assets/js/loding.js"></script>
    <script src="~/assets/js/index.js"></script>

    <script type="text/javascript">
        new WOW().init();
        AOS.init({
        })




        //التفاصيل 


        function openModal() {
            document.getElementById("myModal").style.display = "block";
        }

        function closeModal() {
            document.getElementById("myModal").style.display = "none";
        }

        var slideIndex = 1;
        showSlides(slideIndex);

        function plusSlides(n) {
            showSlides(slideIndex += n);
        }

        function currentSlide(n) {
            showSlides(slideIndex = n);
        }

        function showSlides(n) {
            var i;
            var slides = document.getElementsByClassName("mySlides");
            var dots = document.getElementsByClassName("demo");
            var captionText = document.getElementById("caption");
            if (n > slides.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = slides.length }
            for (i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            for (i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" active", "");
            }
            slides[slideIndex - 1].style.display = "block";
            dots[slideIndex - 1].className += " active";
            captionText.innerHTML = dots[slideIndex - 1].alt;
        }

    </script>

}

